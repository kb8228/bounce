<div class="col-sm-4 player-form">
<h2>Log In</h2>
<%= form_for :login do |f| %>
  <div class="form-group no-margin">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group no-margin">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div>
    <%= f.submit 'Log In', class: "btn btn-success" %>
  </div>
</div>
<% end %>